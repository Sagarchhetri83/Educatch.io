<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educatch Dashboard - Simple Version</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .modal-overlay {
            backdrop-filter: blur(8px);
        }
        .subject-card {
            transition: all 0.3s ease;
        }
        .subject-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .slide-up {
            animation: slideUp 0.3s ease-out;
        }
        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Auth Modal -->
    <div id="authModal" class="fixed inset-0 z-50 flex items-center justify-center modal-overlay bg-black bg-opacity-50">
        <div class="bg-white rounded-3xl p-8 mx-4 w-full max-w-md shadow-2xl slide-up">
            <!-- Modal Header -->
            <div class="text-center mb-8">
                <h1 id="modalTitle" class="text-3xl font-bold text-gray-900 mb-2">Welcome to Educatch!</h1>
                <p id="modalSubtitle" class="text-gray-600">Let's get your adventure started.</p>
            </div>

            <!-- Toggle Buttons -->
            <div class="flex mb-6 bg-gray-100 rounded-xl p-1">
                <button id="signupTab" class="flex-1 py-2 px-4 rounded-lg font-semibold transition-all duration-200 bg-white text-gray-900 shadow-sm">Sign Up</button>
                <button id="loginTab" class="flex-1 py-2 px-4 rounded-lg font-semibold transition-all duration-200 text-gray-600 hover:text-gray-900">Login</button>
            </div>

            <!-- Auth Form -->
            <form id="authForm" class="space-y-6">
                <!-- Parent's Name (only for signup) -->
                <div id="parentNameField">
                    <label for="parentName" class="block text-sm font-semibold text-gray-700 mb-2">Parent's Name</label>
                    <input 
                        type="text" 
                        id="parentName" 
                        name="parentName" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="Enter your name"
                    >
                </div>

                <!-- Child's Name (only for signup) -->
                <div id="childNameField">
                    <label for="childName" class="block text-sm font-semibold text-gray-700 mb-2">Child's Name</label>
                    <input 
                        type="text" 
                        id="childName" 
                        name="childName" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="Enter your child's name"
                    >
                </div>

                <!-- Email Address -->
                <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="Enter your email"
                    >
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="Enter your password"
                    >
                </div>

                <!-- Error Message -->
                <div id="errorMessage" class="hidden text-red-500 text-sm text-center"></div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    id="submitButton"
                    class="w-full bg-gradient-to-r from-rose-400 to-pink-500 text-white font-bold py-4 rounded-xl hover:from-rose-500 hover:to-pink-600 transform hover:scale-105 transition-all duration-200 shadow-lg"
                >
                    Start Learning!
                </button>
            </form>
        </div>
    </div>

    <!-- Main Dashboard (Initially hidden) -->
    <div id="dashboard" class="hidden">
        <!-- Dashboard Header -->
        <header class="bg-white shadow-sm">
            <div class="container mx-auto px-6 py-4">
                <div class="flex justify-between items-center">
                    <!-- Welcome Message -->
                    <div>
                        <h2 id="welcomeMessage" class="text-2xl font-bold text-gray-900">Hello, Explorer!</h2>
                        <p class="text-gray-600">Ready to start your learning journey?</p>
                    </div>
                    
                    <!-- User Profile and Logout -->
                    <div class="flex items-center gap-4">
                        <button id="logoutBtn" class="text-gray-600 hover:text-gray-900 transition-colors text-sm font-medium">
                            Logout
                        </button>
                        <div class="w-12 h-12 bg-gradient-to-r from-rose-400 to-pink-500 rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container mx-auto px-6 py-12">
            <!-- Main Title -->
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Choose a Subject to Begin</h1>
                <p class="text-xl text-gray-600">Pick your favorite subject and start your learning adventure!</p>
            </div>

            <!-- Subject Modules Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
                <!-- English Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-sky-200 to-blue-300 rounded-3xl p-8 text-center border border-blue-200 hover:border-blue-300">
                    <div class="text-6xl mb-4">üî§</div>
                    <h3 class="text-2xl font-bold text-gray-800">English</h3>
                    <p class="text-gray-600 mt-2">Learn letters, words, and stories</p>
                </a>

                <!-- Hindi Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-yellow-200 to-orange-300 rounded-3xl p-8 text-center border border-yellow-200 hover:border-yellow-300">
                    <div class="text-6xl mb-4">üìö</div>
                    <h3 class="text-2xl font-bold text-gray-800">Hindi</h3>
                    <p class="text-gray-600 mt-2">Master Hindi letters and words</p>
                </a>

                <!-- Maths Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-green-200 to-emerald-300 rounded-3xl p-8 text-center border border-green-200 hover:border-green-300">
                    <div class="text-6xl mb-4">üî¢</div>
                    <h3 class="text-2xl font-bold text-gray-800">Maths</h3>
                    <p class="text-gray-600 mt-2">Numbers, counting, and fun math</p>
                </a>

                <!-- Science Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-purple-200 to-violet-300 rounded-3xl p-8 text-center border border-purple-200 hover:border-purple-300">
                    <div class="text-6xl mb-4">üî¨</div>
                    <h3 class="text-2xl font-bold text-gray-800">Science</h3>
                    <p class="text-gray-600 mt-2">Discover the world around us</p>
                </a>

                <!-- Social Science Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-pink-200 to-rose-300 rounded-3xl p-8 text-center border border-pink-200 hover:border-pink-300">
                    <div class="text-6xl mb-4">üåç</div>
                    <h3 class="text-2xl font-bold text-gray-800">Social Science</h3>
                    <p class="text-gray-600 mt-2">Learn about people and places</p>
                </a>

                <!-- Coming Soon Card -->
                <a href="#" class="subject-card bg-gradient-to-br from-gray-200 to-gray-300 rounded-3xl p-8 text-center border border-gray-200 hover:border-gray-300 opacity-75">
                    <div class="text-6xl mb-4">üöÄ</div>
                    <h3 class="text-2xl font-bold text-gray-600">More Coming Soon</h3>
                    <p class="text-gray-500 mt-2">New subjects on the way!</p>
                </a>
            </div>
        </main>
    </div>

    <script>
        // Wait for DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            const authModal = document.getElementById('authModal');
            const dashboard = document.getElementById('dashboard');
            const authForm = document.getElementById('authForm');
            const welcomeMessage = document.getElementById('welcomeMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            // Tab elements
            const signupTab = document.getElementById('signupTab');
            const loginTab = document.getElementById('loginTab');
            const modalTitle = document.getElementById('modalTitle');
            const modalSubtitle = document.getElementById('modalSubtitle');
            const submitButton = document.getElementById('submitButton');
            
            // Form fields
            const parentNameField = document.getElementById('parentNameField');
            const childNameField = document.getElementById('childNameField');
            const parentName = document.getElementById('parentName');
            const childName = document.getElementById('childName');
            const email = document.getElementById('email');
            const password = document.getElementById('password');
            
            let isSignup = true;
            
            // Check URL parameters for mode
            const urlParams = new URLSearchParams(window.location.search);
            const mode = urlParams.get('mode');
            
            // Show auth modal by default
            showAuthModal();
            
            // Switch to login mode if URL parameter is set
            if (mode === 'login') {
                setTimeout(() => switchToLogin(), 100);
            }
            
            // Tab switching
            signupTab.addEventListener('click', () => switchToSignup());
            loginTab.addEventListener('click', () => switchToLogin());
            
            function switchToSignup() {
                isSignup = true;
                signupTab.classList.add('bg-white', 'text-gray-900', 'shadow-sm');
                signupTab.classList.remove('text-gray-600');
                loginTab.classList.remove('bg-white', 'text-gray-900', 'shadow-sm');
                loginTab.classList.add('text-gray-600');
                
                modalTitle.textContent = 'Welcome to Educatch!';
                modalSubtitle.textContent = "Let's get your adventure started.";
                submitButton.textContent = 'Start Learning!';
                
                parentNameField.style.display = 'block';
                childNameField.style.display = 'block';
                parentName.required = true;
                childName.required = true;
            }
            
            function switchToLogin() {
                isSignup = false;
                loginTab.classList.add('bg-white', 'text-gray-900', 'shadow-sm');
                loginTab.classList.remove('text-gray-600');
                signupTab.classList.remove('bg-white', 'text-gray-900', 'shadow-sm');
                signupTab.classList.add('text-gray-600');
                
                modalTitle.textContent = 'Welcome Back!';
                modalSubtitle.textContent = 'Continue your learning journey.';
                submitButton.textContent = 'Login';
                
                parentNameField.style.display = 'none';
                childNameField.style.display = 'none';
                parentName.required = false;
                childName.required = false;
            }
            
            // Handle form submission (simplified without Firebase)
            authForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const emailValue = email.value.trim();
                const passwordValue = password.value.trim();
                const childNameValue = childName.value.trim();
                
                if (!emailValue || !passwordValue) {
                    showError('Please fill in all required fields');
                    return;
                }
                
                if (isSignup && (!parentName.value.trim() || !childNameValue)) {
                    showError('Please fill in all required fields');
                    return;
                }
                
                // Simulate successful auth
                showDashboard(childNameValue);
            });
            
            function showDashboard(childNameValue = null) {
                // Update welcome message
                const displayName = childNameValue || 'Explorer';
                welcomeMessage.textContent = `Hello, ${displayName}!`;
                
                // Hide the modal with a smooth transition
                authModal.style.opacity = '0';
                authModal.style.transform = 'scale(0.95)';
                
                // Show the dashboard after a short delay
                setTimeout(() => {
                    authModal.style.display = 'none';
                    dashboard.classList.remove('hidden');
                    dashboard.classList.add('fade-in');
                }, 300);
            }
            
            function showAuthModal() {
                authModal.style.display = 'flex';
                authModal.style.opacity = '1';
                authModal.style.transform = 'scale(1)';
                dashboard.classList.add('hidden');
            }
            
            function showError(message) {
                errorMessage.textContent = message;
                errorMessage.classList.remove('hidden');
                setTimeout(() => {
                    errorMessage.classList.add('hidden');
                }, 5000);
            }
            
            // Add click handlers for subject cards
            const subjectCards = document.querySelectorAll('.subject-card');
            subjectCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Add a click animation
                    this.style.transform = 'translateY(-5px) scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'translateY(-10px) scale(1)';
                    }, 150);
                    
                    // Here you would typically navigate to the actual module
                    // For now, we'll just show an alert
                    const subjectName = this.querySelector('h3').textContent;
                    alert(`Great choice! You selected ${subjectName}. This would take you to the ${subjectName} learning module.`);
                });
            });
            
            // Add some interactive feedback to form inputs
            const formInputs = document.querySelectorAll('input');
            formInputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('scale-105');
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('scale-105');
                });
            });
            
            // Logout functionality
            const logoutBtn = document.getElementById('logoutBtn');
            logoutBtn.addEventListener('click', () => {
                showAuthModal();
            });
        });
    </script>
</body>
</html>
